{
  "service": {
    "name": "html2pdf-service"
  },
  "deployments": [
    {
      "name": "html2pdf",
      "path": ".",
      "dockerfile": "Dockerfile",
      "start_cmd": "npm run start"
    },
    {
      "name": "minio",
      "image": "minio/minio",
      "start_cmd": "minio server --console-address :9001 /data"
    }
  ],
  "envs": {
    "MINIO_ENDPOINT": "minio",
    "MINIO_PORT": "9000",
    "MINIO_ROOT_USER": "your_minio_user",
    "MINIO_ROOT_PASSWORD": "your_minio_password",
    "MINIO_USE_SSL": "false",
    "MINIO_BUCKET": "pdfs",
    "PUBLIC_DOMAIN": "mi-app.railway.app",
    "PORT": "3000"
  },
  "plugins": [
    {
      "name": "volumes",
      "type": "volume",
      "path": "/data",
      "volume_name": "minio_data"
    }
  ]
}
